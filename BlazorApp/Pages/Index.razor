@page "/"

@using BlazorApp.Models
@inject UserService uService

<h1>Hello</h1>

@if(users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Password</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private User[] users;

    protected override async Task OnInitializedAsync()
    {
        users = await uService.GetUsersAsync();
    }

}